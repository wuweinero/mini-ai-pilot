{
  "name": "mini-ai-pilot",
  "displayName": "Mini AI Pilot",
  "description": "A minimalist AI Copilot.",
  "repository": {
    "url": "https://github.com/wuweinero/mini-ai-pilot"
  },
  "icon": "logo.png",
  "publisher": "wuweinero",
  "version": "2.4.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "mini-ai-pilot",
      "properties": {
        "mini-ai-pilot.endpoint": {
          "type": "string",
          "default": "http://127.0.0.1:11434/v1",
          "description": "The endpoint for the completion API. Either OpenAI or local LLM."
        },
        "mini-ai-pilot.api_key": {
          "type": "string",
          "default": "ollama",
          "description": "Your own openai API key(sk-xxx, e.g.)"
        },
        "mini-ai-pilot.model": {
          "type": "string",
          "default": "llama3:8b",
          "description": "Model name selected for inference. Models are separated using semicolons."
        },
        "mini-ai-pilot.context_length": {
          "type": "number",
          "default": 40000,
          "description": "The maximum number of input characters for the completion API."
        },
        "mini-ai-pilot.max_tokens": {
          "type": "number",
          "default": 4000,
          "description": "The maximum number of output tokens for the completion API."
        },
        "mini-ai-pilot.temperature": {
          "type": "number",
          "default": 0.7,
          "description": "The randomness level of output generation. A higher value leads to more random outputs."
        },
        "mini-ai-pilot.alternate": {
          "type": "object",
          "default": {
            "endpoint": "http://127.0.0.1:11434/v1",
            "api_key": "ollama",
            "model": "qwen2:7b-instruct-q8_0",
            "context_length": 40000,
            "max_tokens": 4000,
            "temperature": 0.7
          },
          "description": "Alternate api configuration.",
          "scope": "resource"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sideMenu",
          "title": "MINI AI PILOT",
          "icon": "media/dark.svg"
        }
      ]
    },
    "views": {
      "sideMenu": [
        {
          "id": "sideView",
          "name": "",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.5"
  }
}
